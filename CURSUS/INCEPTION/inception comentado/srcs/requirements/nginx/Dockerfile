FROM debian:bullseye

RUN apt update -y && apt upgrade -y

RUN apt install nginx -y && apt install openssl -y

RUN mkdir -p /etc/nginx/ssl

RUN openssl req -x509 -nodes \
    -out /etc/nginx/ssl/inception.crt -keyout /etc/nginx/ssl/inception.key \
    -subj "/C=ES/ST=Andalucia/L=Malaga/O=42/OU=42/CN=druiz-ca.42.fr/UID=druiz-ca"
# req -> Creates and precesses certificate requests.
# x509 -> Standardized digital certificate format used to prove the ownership of a \
# public key and establish trust between entities in secure communications.
# nodes -> OpenSSL encrypts private keys with a passphrase
# out -> Specifies the file where the output of the OpenSSL operation should be saved.
# keyout -> Specifies the file where the private key generated by OpenSSL operation should be saved.
# subj -> Allows you to set the identifying information about the entity for the certificate request \
# directly from the command line.

COPY conf/nginx.conf /etc/nginx/nginx.conf

EXPOSE 443

CMD ["nginx", "-g", "daemon off;"]
